{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="row">
            <div class="col-lg-2 menu">
                <h7>Galeries de nos membres :</h7>
                <ul class="vertical">
                {% for user in users %}
                    <li><a href="{{path('showGalery', {'idUser':user.id})}}">{{ user.username }}</a></li>
                {% endfor %}
                </ul>
            </div>

            <div class="col-lg-10">
                {% if not app.user %}
                    {% if nbTentatives != 0 and nbTentatives <= 2 %}
                        <h6>Il vous reste encore {{nbTentatives}} essais</h6>
                    {% elseif nbTentatives == 0 %}
                        <h6>Compte bloqué, en attente de modération par l'admin</h6>
                    {% elseif affMess %}
                        <h6>Email invalide</h6>
                    {% endif %}
                {% endif %}

                <h2>Bienvenue dans le projet de Galerie !</h2>

                {% if username != "" %}
                    <h4>Voici la galerie de {{username}}</h4>
                {% else %}
                    <h4>La galerie n'est pas dispo :(</h4>
                {% endif %}
                <div class="container">                    
                    <table>
                        <tr>
                        {% for obj in photos %}
                            {% if loop.index0 % 4 == 0 %}
                                </tr>
                                <tr>
                            {% endif %}

                            <td><img src="{{obj.url}}" alt="Smiley face" height="150" width="150"></td>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    
    table{
        border-collapse: collapse;
    }

    td{
        border: 1px solid black;
    }

    h6{
        color: red;
        font-size: 15px;
        float: right;
        margin-right: 18px;
    }

    </style>
{% endblock %}
