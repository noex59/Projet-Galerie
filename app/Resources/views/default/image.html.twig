{% extends 'base.html.twig' %}


{% block body %}
    <div id="container">
        <div class="row">
            <div class="col-lg-2 menu">
                <h6>Galeries de nos membres :</h6>
                <ul class="vertical">
                {% for user in users %}
                    <li><a href="{{path('showGalery', {'idUser':user.id})}}">{{ user.username }}</a></li>
                {% endfor %}
                </ul>
            </div>

            <div class="col-lg-10">
                {% if error != "" %}
                    <h6 class="red">{{error}}</h6>
                {% endif %}
                <h2>Votre Galerie :</h2>
                <div class="container">
                    <div class="row">
                        <form action="{{path('createPicture', {'idUser':id})}}" method="post">
                            <input id="checkBox" type="checkbox" name="checked[]">
                            <label for="checkBox">Ajouter une image import√©</label>
                            <input type="text" id="url" name="url" placeholder="Entrez un url">
                            <input type="file" id="file" name="image" accept=".jpg, .jpeg, .png">
                            <input type="text" class="little" id="pos" name="pos" placeholder="pos">
                            <input type="hidden" name="id" value="{{id}}">
                            <input type="submit" id="ajout" name="ajout" value="Ajouter">
                        </form>


                    </div>
                    <hr>
                    </br>

                    <div class="row">              
                        {% for obj in photos %}
                            <div class="col-3">
                                <div class="col-10">
                                    <img src="{{asset(obj.url)}}" alt="Not Available :(" height="150" width="150">
                                </div>
                                <div class="col-5">
                                    <input type="text" class="little" name="pos" value="{{photos[loop.index0].pos}}">
                                </div>
                                <div class="col-5">
                                    <a href="{{ path('deletePicture', {'id':photos[loop.index0].id, 'idUser':id}) }}">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

    h6.red{
        color: red;
        font-size: 15px;
        float: center;
        margin-right: 18px;
    }

    .little{
        width: 60px;    
    }

    #url{
        width: 75vw;
    }

    label{
        width: 250px;
    }

    hr{
        margin-top: 35px;
        border-top: 6px solid black;
    }

    .glyphicon-trash{
        color: black;
    }

    .menu{
        background-color: #DCDCDC;
        height : 100vh;
    }

    table{
        border-collapse: collapse;
    }

    td{
        border: 1px solid black;
    }

    h6{
        font-size: 18px;
    }

    </style>
{% endblock %}
